<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/backgroundColor"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:splitMotionEvents="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSecondary"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/create_user_status_bar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/create_user_back_button"
                    android:layout_width="?actionBarSize"
                    android:layout_height="?actionBarSize"
                    android:adjustViewBounds="true"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:maxHeight="200dp"
                    android:src="@drawable/ic_round_keyboard_backspace_24"
                    android:tint="?attr/colorOnPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/FontNormal"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/create_user"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="200dp"
            android:src="@drawable/logo_transparent_orange_long"
            android:tint="?attr/colorSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
            app:layout_constraintWidth_percent="0.5" />

        <LinearLayout
            android:splitMotionEvents="false"
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/create_user_image"
                android:layout_marginTop="50dp"
                android:src="@drawable/user_icon_ligthblue"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="150dp">
            </de.hdodenhof.circleimageview.CircleImageView>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="?attr/colorSecondary"
                    app:cardCornerRadius="?attr/cardCornerRadius"
                    app:cardElevation="?attr/cardElevation"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/create_user_image_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:theme="@style/FontNormal"
                        android:foreground="?android:selectableItemBackgroundBorderless"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/select"
                        android:textColor="?attr/colorOnPrimary"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    app:cardBackgroundColor="@color/red"
                    app:cardCornerRadius="?attr/cardCornerRadius"
                    app:cardElevation="?attr/cardElevation"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageButton
                        android:id="@+id/create_user_image_delete"
                        android:tint="?attr/colorOnPrimary"
                        android:src="@drawable/ic_cancel"
                        android:background="?android:selectableItemBackgroundBorderless"
                        android:layout_width="30dp"
                        android:layout_height="30dp">

                    </ImageButton>

                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="@string/name"
                android:textColorHint="?attr/subtitleTextColor"
                app:hintTextColor="@color/light_blue"
                app:boxCornerRadiusTopStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:endIconTint="?attr/subtitleTextColor"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxStrokeColor="@color/light_blue"
                android:layout_marginTop="10dp"
                app:boxStrokeWidth="2dp"
                app:startIconTint="?attr/subtitleTextColor"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic_round_person_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_user_name_field"
                    android:layout_width="match_parent"
                    android:theme="@style/FontLight"
                    android:textSize="15sp"
                    android:inputType="textPersonName"
                    android:textColor="?attr/titleTextColor"
                    android:textColorHint="?attr/subtitleTextColor"
                    android:layout_height="wrap_content">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="@string/last_name"
                android:textColorHint="?attr/subtitleTextColor"
                app:hintTextColor="@color/light_blue"
                app:boxCornerRadiusTopStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:endIconTint="?attr/subtitleTextColor"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxStrokeColor="@color/light_blue"
                android:layout_marginTop="10dp"
                app:boxStrokeWidth="2dp"
                app:startIconTint="?attr/subtitleTextColor"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic_round_person_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_user_last_name_field"
                    android:layout_width="match_parent"
                    android:theme="@style/FontLight"
                    android:textSize="15sp"
                    android:inputType="textPersonName"
                    android:textColor="?attr/titleTextColor"
                    android:textColorHint="?attr/subtitleTextColor"
                    android:layout_height="wrap_content">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="@string/age"
                android:textColorHint="?attr/subtitleTextColor"
                app:hintTextColor="@color/light_blue"
                app:boxCornerRadiusTopStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxStrokeColor="@color/light_blue"
                android:layout_marginTop="10dp"
                app:endIconTint="?attr/subtitleTextColor"
                app:boxStrokeWidth="2dp"
                app:startIconTint="?attr/subtitleTextColor"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic_round_person_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_user_age_field"
                    android:layout_width="match_parent"
                    android:theme="@style/FontLight"
                    android:textSize="15sp"
                    android:inputType="number"
                    android:textColor="?attr/titleTextColor"
                    android:textColorHint="?attr/subtitleTextColor"
                    android:layout_height="wrap_content">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="@string/identification"
                android:textColorHint="?attr/subtitleTextColor"
                app:hintTextColor="@color/light_blue"
                app:boxCornerRadiusTopStart="15dp"
                app:endIconTint="?attr/subtitleTextColor"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxStrokeColor="@color/light_blue"
                android:layout_marginTop="10dp"
                app:boxStrokeWidth="2dp"
                app:startIconTint="?attr/subtitleTextColor"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_user_identification_field"
                    android:layout_width="match_parent"
                    android:theme="@style/FontLight"
                    android:textSize="15sp"
                    android:inputType="number"
                    android:textColor="?attr/titleTextColor"
                    android:textColorHint="?attr/subtitleTextColor"
                    android:layout_height="wrap_content">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="@string/phone"
                android:textColorHint="?attr/subtitleTextColor"
                app:hintTextColor="@color/light_blue"
                app:boxCornerRadiusTopStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:endIconTint="?attr/subtitleTextColor"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxStrokeColor="@color/light_blue"
                android:layout_marginTop="10dp"
                app:boxStrokeWidth="2dp"
                app:startIconTint="?attr/subtitleTextColor"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_user_phone_field"
                    android:layout_width="match_parent"
                    android:theme="@style/FontLight"
                    android:textSize="15sp"
                    android:inputType="number"
                    android:textColor="?attr/titleTextColor"
                    android:textColorHint="?attr/subtitleTextColor"
                    android:layout_height="wrap_content">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="150dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="?attr/colorSecondary"
                app:cardCornerRadius="?attr/cardCornerRadius"
                app:cardElevation="?attr/cardElevation"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/create_user_create_user_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:theme="@style/FontNormal"
                    android:foreground="?android:selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/create_user"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="12sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>