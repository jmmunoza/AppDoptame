<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="?attr/backgroundColor"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:splitMotionEvents="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSecondary"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/create_pet_status_bar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/create_pet_back_button"
                    android:layout_width="?actionBarSize"
                    android:layout_height="?actionBarSize"
                    android:adjustViewBounds="true"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:maxHeight="200dp"
                    android:src="@drawable/ic_round_keyboard_backspace_24"
                    android:tint="?attr/colorOnPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/create_pet"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="200dp"
            android:src="@drawable/logo_transparent_orange_long"
            android:tint="?attr/colorSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
            app:layout_constraintWidth_percent="0.5" />

        <LinearLayout
            android:splitMotionEvents="false"
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

            <EditText
                android:layout_marginTop="50dp"
                android:id="@+id/create_pet_name_field"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edit_text_rounded_secondary"
                android:drawableStart="@drawable/ic_baseline_pets_24"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/pet_name"
                android:inputType="textPersonName"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:textSize="12sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="12dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:textSize="12sp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pet_type"
                        />

                    <RadioButton
                        android:id="@+id/select_pet_cat_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gato" />

                    <RadioButton
                        android:id="@+id/select_pet_dog_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Perro" />
                </RadioGroup>

            <EditText
                android:id="@+id/create_pet_breed_field"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edit_text_rounded_secondary"
                android:drawableStart="@drawable/ic_baseline_pets_24"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/breed"
                android:inputType="text"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/create_pet_age_field"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edit_text_rounded_secondary"
                android:drawableStart="@drawable/ic_baseline_pets_24"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/pet_age"
                android:inputType="number"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:textSize="12sp" />


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:drawablePadding="12dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:textSize="12sp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pet_sex"
                    />

                <RadioButton
                    android:id="@+id/select_pet_male_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Macho" />

                <RadioButton
                    android:id="@+id/select_pet_female_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hembra" />
            </RadioGroup>



            <EditText
                android:id="@+id/create_pet_size_field"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edit_text_rounded_secondary"
                android:drawableStart="@drawable/ic_baseline_pets_24"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/pet_size"
                android:inputType="number"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:textSize="12sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:drawablePadding="12dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:textSize="12sp"
                >

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sterilized"
                    />

                <RadioButton
                    android:id="@+id/select_pet_sterilized_yes_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Si" />

                <RadioButton
                    android:id="@+id/select_pet_sterilized_no_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No" />
            </RadioGroup>

            <EditText
                android:id="@+id/create_pet_weight_field"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edit_text_rounded_secondary"
                android:drawableStart="@drawable/ic_baseline_pets_24"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/pet_weight"
                android:inputType="number"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/create_pet_description_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edit_text_rounded_secondary"
                android:drawableStart="@drawable/ic_baseline_pets_24"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/pet_description"
                android:inputType="textMultiLine"
                android:paddingStart="25dp"
                android:padding="25dp"
                android:textSize="12sp"
                android:lines="8"
                android:maxLines="10"
                android:minLines="1"
                android:scrollbars="vertical"/>


            <Button
                android:id="@+id/pick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/totalPhotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="@color/blue"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_Gallery_Images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="vertical"
                android:layout_marginTop="5dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="150dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="?attr/colorSecondary"
                app:cardCornerRadius="?attr/cardCornerRadius"
                app:cardElevation="?attr/cardElevation"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/create_pet_create_pet_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:fontFamily="@font/poppins_bold"
                    android:foreground="?android:selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/create_pet"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="12sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>